    },
    "read_count": {
      "name": "read_count",
      "aliases": [],
      "type": "metric",
      "group": "metric",
      "description": "Recent reader engagement metric",
      "example_values": ["100", "[50 TO *]"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "supports_range": true
      },
