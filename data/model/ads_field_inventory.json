  "operators": {
    "citations": {
      "syntax": "citations(query)",
      "description": "Find papers that cite the results of the inner query",
      "example": "citations(author:\"Einstein\" year:1905)",
      "notes": "Returns papers that cite any paper matching the inner query"
    },
    "references": {
      "syntax": "references(query)",
      "description": "Find papers referenced by the results of the inner query",
      "example": "references(bibcode:2020ApJ...900..100S)",
      "notes": "Returns papers in the reference list of papers matching the inner query"
    },
    "trending": {
      "syntax": "trending(query)",
      "description": "Find trending papers (high recent read counts) matching query",
      "example": "trending(abs:\"dark energy\")",
      "notes": "Papers with unusually high recent readership"
    },
    "similar": {
      "syntax": "similar(query)",
      "description": "Find papers similar to the results of the inner query",
      "example": "similar(bibcode:2020ApJ...900..100S)",
      "notes": "Uses text similarity to find related papers"
    },
    "useful": {
      "syntax": "useful(query)",
      "description": "Find useful/foundational papers for a topic",
      "example": "useful(abs:\"machine learning astronomy\")",
      "notes": "Highly-read papers in the topic area"
    },
    "reviews": {
      "syntax": "reviews(query)",
      "description": "Find review articles on a topic",
      "example": "reviews(abs:\"exoplanet atmospheres\")",
      "notes": "Returns review and survey papers"
    },
    "topn": {
      "syntax": "topn(N, query, sort_field)",
      "description": "Return top N results sorted by a field",
      "example": "topn(10, abs:\"gravitational waves\", citation_count desc)",
      "notes": "N is the count, sort_field defaults to citation_count desc"
    },
    "pos": {
      "syntax": "pos(query, start, end)",
      "description": "Search for authors in specific positions",
      "example": "pos(author:\"Smith\", 1, 3)",
      "notes": "Find authors in position range [start, end] of author list"
    }
  },
  "boolean_operators": {
    "AND": "Both terms must match (default operator between terms)",
    "OR": "Either term can match",
    "NOT": "Exclude records matching the term",
    "-": "Prefix equivalent to NOT",
    "+": "Prefix requiring term must match"
  },
  "special_syntax": {
    "wildcards": {
      "*": "Matches zero or more characters",
      "?": "Matches exactly one character",
      "notes": "Not all fields support wildcards"
    },
    "proximity": {
      "NEAR": "Terms within N words of each other",
      "example": "\"dark matter\" NEAR5 \"detection\"",
      "notes": "Supported in text fields"
    },
    "ranges": {
      "syntax": "[min TO max]",
      "example": "year:[2020 TO 2023]",
      "notes": "Use * for unbounded: [2020 TO *]"
    },
    "phrase": {
      "syntax": "\"exact phrase\"",
      "example": "title:\"dark matter detection\"",
      "notes": "Matches words in exact order"
    },
    "exact_match": {
      "prefix": "=",
      "example": "=author:\"Smith, John\"",
      "notes": "Disables synonym expansion and fuzzy matching"
    },
    "first_author": {
      "prefix": "^",
      "example": "author:\"^Smith, John\"",
      "notes": "Match first author only"
    }
  }
}
