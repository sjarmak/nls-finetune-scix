    "page_count": {
      "name": "page_count",
      "aliases": [],
      "type": "metric",
      "group": "metric",
      "description": "Number of pages in the document",
      "example_values": ["10", "[5 TO 20]"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "supports_range": true
      },
      "notes": "Integer field"
    },
    "year": {
      "name": "year",
      "aliases": [],
      "type": "date",
      "group": "date",
      "description": "Publication year",
      "example_values": ["2023", "2020-2023", "[2020 TO 2023]"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
