{
  "version": "1.0.0",
  "source": "ADS Solr Schema and Search Syntax Documentation",
  "last_updated": "2026-01-22",
  "references": [
    "https://ui.adsabs.harvard.edu/help/search/search-syntax",
    "https://ui.adsabs.harvard.edu/help/search/comprehensive-solr-term-list",
    "https://github.com/adsabs/montysolr/blob/main/deploy/adsabs/server/solr/collection1/conf/schema.xml"
  ],
  "field_groups": {
    "content": {
      "description": "Fields for searching document content (abstract, title, body text)",
      "fields": ["abs", "title", "abstract", "body", "full", "ack", "caption"]
    },
    "author": {
      "description": "Fields for author and affiliation searches",
      "fields": ["author", "first_author", "author_count", "aff", "inst", "orcid", "orcid_pub", "orcid_user", "orcid_other"]
    },
    "enum": {
      "description": "Fields with constrained vocabulary (enumerated values)",
      "fields": ["doctype", "property", "database", "bibgroup", "esources", "data"]
    },
    "identifier": {
      "description": "Fields for unique record identifiers",
      "fields": ["bibcode", "alternate_bibcode", "doi", "arxiv", "identifier"]
    },
    "metric": {
      "description": "Numeric fields for citation and engagement metrics",
      "fields": ["citation_count", "citation_count_norm", "read_count", "author_count", "page_count"]
    },
    "date": {
      "description": "Fields for temporal/date searches",
      "fields": ["year", "pubdate", "entry_date", "entdate"]
    },
    "publication": {
      "description": "Fields for publication venue identification",
      "fields": ["bibstem", "pub", "volume", "issue", "page"]
    },
    "classification": {
      "description": "Fields for subject/topic classification",
      "fields": ["keyword", "keyword_norm", "arxiv_class", "vizier", "object", "simbad"]
    },
    "special": {
      "description": "Fields with special syntax or operator requirements",
      "fields": ["citation", "references", "trending", "similar", "useful", "reviews", "topn", "pos"]
    }
  },
  "fields": {
    "abs": {
      "name": "abs",
      "aliases": ["abstract_title_keywords"],
      "type": "text",
      "group": "content",
      "description": "Virtual field searching title, abstract, and keywords simultaneously",
      "example_values": ["dark matter", "exoplanets", "gravitational waves"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": true,
        "exact_prefix": "="
      },
      "notes": "Most common field for general topic searches"
    },
    "title": {
      "name": "title",
      "aliases": [],
      "type": "text",
      "group": "content",
      "description": "Document title field only",
      "example_values": ["Detection of gravitational waves", "Exoplanet atmospheres"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": true,
        "exact_prefix": "="
      },
      "notes": "Use when specifically searching titles, not abstracts"
    },
    "abstract": {
      "name": "abstract",
      "aliases": [],
      "type": "text",
      "group": "content",
      "description": "Paper abstract content only",
      "example_values": ["We present observations of", "In this paper we analyze"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": true,
        "exact_prefix": "="
      },
      "notes": "For abstract-only searches; use abs: for broader content search"
    },
    "body": {
      "name": "body",
      "aliases": [],
      "type": "text",
      "group": "content",
      "description": "Full text body (excluding acknowledgments)",
      "example_values": ["methodology", "results show"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": true,
        "exact_prefix": "="
      },
      "notes": "Only available for articles with full text indexed"
    },
    "full": {
      "name": "full",
      "aliases": ["fulltext"],
      "type": "text",
      "group": "content",
      "description": "Searches title, abstract, body, acknowledgments, and keywords",
      "example_values": ["HST observations", "Chandra data"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": true,
        "exact_prefix": "="
      },
      "notes": "Most comprehensive content search"
    },
    "ack": {
      "name": "ack",
      "aliases": ["acknowledgments"],
      "type": "text",
      "group": "content",
      "description": "Paper acknowledgment section text",
      "example_values": ["NASA grant", "HST program", "NSF support"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Useful for finding papers funded by specific grants or using specific facilities"
    },
    "caption": {
      "name": "caption",
      "aliases": [],
      "type": "text",
      "group": "content",
      "description": "Figure and table caption text",
      "example_values": ["color-magnitude diagram", "light curve"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Searches illustration and table descriptions"
    },
    "author": {
      "name": "author",
      "aliases": [],
      "type": "text",
      "group": "author",
      "description": "Author names (surname first format)",
      "example_values": ["Einstein, A", "Hawking, Stephen", "^Smith, John"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": false,
        "supports_phrase": true,
        "supports_synonyms": false,
        "exact_prefix": "=",
        "first_author_prefix": "^"
      },
      "notes": "Use ^ prefix for first author only. Quotes for exact name matching."
    },
    "first_author": {
      "name": "first_author",
      "aliases": [],
      "type": "text",
      "group": "author",
      "description": "Lead author of the paper",
      "example_values": ["Einstein, A", "Hawking, S"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": false,
        "supports_phrase": true,
        "supports_synonyms": false,
        "exact_prefix": "="
      },
      "notes": "Alternative to author:^name syntax"
    },
    "author_count": {
      "name": "author_count",
      "aliases": [],
      "type": "metric",
      "group": "metric",
      "description": "Number of authors on the paper",
      "example_values": ["1", "10", "[5 TO 20]"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "supports_range": true
      },
      "notes": "Integer field supporting exact match and range queries"
    },
    "aff": {
      "name": "aff",
      "aliases": ["affiliation"],
      "type": "text",
      "group": "author",
      "description": "Author affiliation strings (raw text)",
      "example_values": ["Harvard", "MIT", "Caltech"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": true,
        "supports_phrase": true,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Searches raw affiliation text; use inst: for curated institution names"
    },
    "inst": {
      "name": "inst",
      "aliases": ["institution"],
      "type": "text",
      "group": "author",
      "description": "Curated institutional affiliation names",
      "example_values": ["CfA", "Caltech", "UCLA/IGPP"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": false,
        "supports_phrase": true,
        "supports_synonyms": false,
        "exact_prefix": null,
        "hierarchical": true
      },
      "notes": "Supports hierarchical structure like UCLA/IGPP"
    },
    "orcid": {
      "name": "orcid",
      "aliases": [],
      "type": "identifier",
      "group": "author",
      "description": "Virtual field searching all ORCID variants",
      "example_values": ["0000-0001-2345-6789"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Searches orcid_pub, orcid_user, and orcid_other combined"
    },
    "orcid_pub": {
      "name": "orcid_pub",
      "aliases": [],
      "type": "identifier",
      "group": "author",
      "description": "Publisher-supplied ORCID identifiers",
      "example_values": ["0000-0001-2345-6789"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "ORCIDs provided by publishers"
    },
    "orcid_user": {
      "name": "orcid_user",
      "aliases": [],
      "type": "identifier",
      "group": "author",
      "description": "User-claimed ORCID identifiers with consent",
      "example_values": ["0000-0001-2345-6789"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Public ORCID claims made by users"
    },
    "orcid_other": {
      "name": "orcid_other",
      "aliases": [],
      "type": "identifier",
      "group": "author",
      "description": "Non-public ORCID claims",
      "example_values": ["0000-0001-2345-6789"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "ORCIDs from non-public sources"
    },
    "doctype": {
      "name": "doctype",
      "aliases": [],
      "type": "enum",
      "group": "enum",
      "description": "Document type classification",
      "example_values": ["article", "eprint", "inproceedings", "book", "phdthesis", "software"],
      "valid_values": [
        "abstract", "article", "book", "bookreview", "catalog", "circular",
        "editorial", "eprint", "erratum", "inbook", "inproceedings",
        "mastersthesis", "misc", "newsletter", "obituary", "phdthesis",
        "pressrelease", "proceedings", "proposal", "software", "talk", "techreport"
      ],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Constrained vocabulary field"
    },
    "property": {
      "name": "property",
      "aliases": [],
      "type": "enum",
      "group": "enum",
      "description": "Record property flags for filtering",
      "example_values": ["refereed", "openaccess", "data", "eprint", "notrefereed"],
      "valid_values": [
        "ads_openaccess", "author_openaccess", "eprint_openaccess", "pub_openaccess",
        "openaccess", "article", "nonarticle", "refereed", "notrefereed", "eprint",
        "inproceedings", "software", "catalog", "associated", "data", "esource",
        "inspire", "library_catalog", "presentation", "toc", "ocr_abstract"
      ],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Constrained vocabulary field for record attributes"
    },
    "database": {
      "name": "database",
      "aliases": ["collection"],
      "type": "enum",
      "group": "enum",
      "description": "Collection/database membership",
      "example_values": ["astronomy", "physics", "general"],
      "valid_values": ["astronomy", "physics", "general", "earthscience"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Limits search to specific ADS collections"
    },
    "bibgroup": {
      "name": "bibgroup",
      "aliases": [],
      "type": "enum",
      "group": "enum",
      "description": "Curated bibliographic group membership",
      "example_values": ["HST", "JWST", "ALMA", "Chandra", "Spitzer"],
      "valid_values": [
        "HST", "JWST", "Spitzer", "Chandra", "XMM", "GALEX", "Kepler", "K2",
        "TESS", "FUSE", "IUE", "EUVE", "Copernicus", "IRAS", "WISE", "NEOWISE",
        "Fermi", "Swift", "RXTE", "NuSTAR", "SOHO", "STEREO", "SDO",
        "ESO/Telescopes", "CFHT", "Gemini", "Keck", "VLT", "Subaru", "NOAO",
        "NOIRLab", "CTIO", "KPNO", "Pan-STARRS", "SDSS", "2MASS", "UKIRT",
        "ALMA", "JCMT", "APEX", "ARECIBO", "VLA", "VLBA", "GBT", "LOFAR",
        "MeerKAT", "SKA", "Gaia", "Hipparcos", "CfA", "NASA PubSpace", "LISA", "LIGO"
      ],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Hand-curated bibliographies by institution librarians"
    },
    "esources": {
      "name": "esources",
      "aliases": [],
      "type": "enum",
      "group": "enum",
      "description": "Available electronic source formats",
      "example_values": ["PUB_PDF", "EPRINT_PDF", "ADS_SCAN"],
      "valid_values": [
        "PUB_PDF", "PUB_HTML", "EPRINT_PDF", "EPRINT_HTML",
        "AUTHOR_PDF", "AUTHOR_HTML", "ADS_PDF", "ADS_SCAN"
      ],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Indicates what electronic formats are available"
    },
    "data": {
      "name": "data",
      "aliases": [],
      "type": "enum",
      "group": "enum",
      "description": "Associated data archive sources",
      "example_values": ["MAST", "NED", "SIMBAD", "Chandra"],
      "valid_values": [
        "ARI", "BICEP2", "Chandra", "CXO", "ESA", "ESO", "GCPD", "GTC",
        "HEASARC", "Herschel", "INES", "IRSA", "ISO", "KOA", "MAST", "NED",
        "NExScI", "NOAO", "PDS", "SIMBAD", "Spitzer", "TNS", "VizieR", "XMM"
      ],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Archives that have data linked to the record"
    },
    "bibcode": {
      "name": "bibcode",
      "aliases": [],
      "type": "identifier",
      "group": "identifier",
      "description": "ADS bibliographic code identifier",
      "example_values": ["2020ApJ...900..100S", "2023Natur.615..605H"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "19-character unique identifier for each record"
    },
    "alternate_bibcode": {
      "name": "alternate_bibcode",
      "aliases": [],
      "type": "identifier",
      "group": "identifier",
      "description": "Alternative bibcode identifiers",
      "example_values": ["2020arXiv200100001A"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Searches alternate versions (e.g., arXiv version of published paper)"
    },
    "doi": {
      "name": "doi",
      "aliases": [],
      "type": "identifier",
      "group": "identifier",
      "description": "Digital Object Identifier",
      "example_values": ["10.1086/345794", "10.1038/nature12917"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "DOI must match exactly"
    },
    "arxiv": {
      "name": "arxiv",
