        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Supports both new and old arXiv ID formats"
    },
    "identifier": {
      "name": "identifier",
      "aliases": [],
      "type": "identifier",
      "group": "identifier",
      "description": "Virtual field searching all identifier types",
      "example_values": ["2020ApJ...900..100S", "10.1086/345794"],
      "syntax": {
        "supports_wildcards": true,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "exact_prefix": null
      },
      "notes": "Searches bibcode, DOI, arXiv, and other identifiers"
    },
    "citation_count": {
      "name": "citation_count",
      "aliases": [],
      "type": "metric",
      "group": "metric",
      "description": "Total number of citations received",
      "example_values": ["100", "[50 TO 200]", "[100 TO *]"],
      "syntax": {
        "supports_wildcards": false,
        "supports_proximity": false,
        "supports_phrase": false,
        "supports_synonyms": false,
        "supports_range": true
      },
